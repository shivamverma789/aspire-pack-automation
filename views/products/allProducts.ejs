    <script>
        // Theme Toggle
        const themeToggleDesktop = document.getElementById('themeToggleDesktop');
        const themeIconDesktop = document.getElementById('themeIconDesktop');
        const themeToggleMobile = document.getElementById('themeToggleMobile'); 
        const themeIconMobile = document.getElementById('themeIconMobile'); 
        const body = document.body;

        const currentTheme = localStorage.getItem('theme') || 'light';
        body.setAttribute('data-theme', currentTheme);
        updateThemeIcons(currentTheme);

        function updateThemeIcons(theme) {
            const iconClass = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
            if (themeIconDesktop) themeIconDesktop.className = iconClass;
            if (themeIconMobile) themeIconMobile.className = iconClass;
        }

        function toggleTheme() {
            const currentTheme = body.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            body.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcons(newTheme);
        }

        if (themeToggleDesktop) themeToggleDesktop.addEventListener('click', toggleTheme);
        if (themeToggleMobile) themeToggleMobile.addEventListener('click', toggleTheme);

        // Mobile Menu Toggle
        const mobileToggle = document.getElementById('mobileToggle');
        const navMenu = document.getElementById('navMenu');

        mobileToggle.addEventListener('click', function() {
            navMenu.classList.toggle('active');
            const icon = mobileToggle.querySelector('i');
            icon.className = navMenu.classList.contains('active') ? 'fas fa-times' : 'fas fa-bars';
            document.body.style.overflow = navMenu.classList.contains('active') ? 'hidden' : 'auto';
        });

        // Close mobile menu when a link is clicked
        navMenu.querySelectorAll('.nav-link, .admin-btn, .btn-primary').forEach(link => {
            link.addEventListener('click', () => {
                if (navMenu.classList.contains('active')) {
                    navMenu.classList.remove('active');
                    mobileToggle.querySelector('i').className = 'fas fa-bars';
                    document.body.style.overflow = 'auto';
                }
            });
        });


        const preSlug = "<%= typeof preselectedCategorySlug !== 'undefined' ? preselectedCategorySlug : '' %>";
        const categoryItems = document.querySelectorAll('.category-item');
        const productCards = document.querySelectorAll('.product-card');
        const resultCount = document.getElementById('resultCount');

        function filterProducts(slug) {
            let visibleCount = 0;
            
            productCards.forEach(card => {
                const cardCat = card.dataset.cat;
                const cardSub = card.dataset.sub;
                const shouldShow = !slug || cardCat === slug || cardSub === slug;
                
                card.style.display = shouldShow ? 'block' : 'none';
                if (shouldShow) visibleCount++;
            });
            
            resultCount.textContent = visibleCount;
            
            document.querySelectorAll('.main-category, .subcategory-item').forEach(item => {
                item.classList.remove('active');
            });
            
            if (slug) {
                const activeItem = document.querySelector(`[data-slug="${slug}"]`);
                if (activeItem) {
                    activeItem.classList.add('active');
                }
            }
        }

        categoryItems.forEach(item => {
            const mainCat = item.querySelector('.main-category');
            const expandIcon = item.querySelector('.expand-icon');
            
            mainCat.addEventListener('click', () => {
                const slug = mainCat.dataset.slug;
                
                if (expandIcon) {
                    item.classList.toggle('expanded');
                }
                
                filterProducts(slug);
            });
            
            const subcategories = item.querySelectorAll('.subcategory-item');
            subcategories.forEach(subItem => {
                subItem.addEventListener('click', (e) => {
                    e.stopPropagation();
                    const slug = subItem.dataset.slug;
                    filterProducts(slug);
                });
            });
        });

        const searchInput = document.getElementById('searchInput');
        const searchBtn = document.getElementById('searchBtn');

        function performSearch() {
            const query = searchInput.value.toLowerCase().trim();
            let visibleCount = 0;
            
            productCards.forEach(card => {
                const productName = card.dataset.name;
                const shouldShow = !query || productName.includes(query);
                
                card.style.display = shouldShow ? 'block' : 'none';
                if (shouldShow) visibleCount++;
            });
            
            resultCount.textContent = visibleCount;
        }

        searchInput.addEventListener('input', performSearch);
        searchBtn.addEventListener('click', performSearch);

        const sortSelect = document.getElementById('sortSelect');
        
        sortSelect.addEventListener('change', function() {
            const sortValue = this.value;
            const grid = document.getElementById('productsGrid');
            const cards = Array.from(productCards);
            
            cards.sort((a, b) => {
                const nameA = a.dataset.name;
                const nameB = b.dataset.name;
                
                switch(sortValue) {
                    case 'name-asc':
                        return nameA.localeCompare(nameB);
                    case 'name-desc':
                        return nameB.localeCompare(nameA);
                    default:
                        return 0;
                }
            });
            
            cards.forEach(card => grid.appendChild(card));
        });

        const quickViewModal = document.getElementById('quickViewModal');
        const inquiryModal = document.getElementById('inquiryModal');
        const closeQuickView = document.getElementById('closeQuickView');
        const closeInquiry = document.getElementById('closeInquiry');

        function openQuickView(productId, productName, modelNumber, image, description) {
            document.getElementById('modalTitle').textContent = 'Product Quick View';
            document.getElementById('modalProductName').textContent = productName;
            document.getElementById('modalProductModel').textContent = modelNumber ? `Model: ${modelNumber}` : '';
            document.getElementById('modalProductDescription').textContent = description || 'High-quality packaging machinery designed for efficiency and reliability. Perfect for industrial applications with advanced features and robust construction.';
            document.getElementById('modalMainImage').src = image || '/placeholder.svg?height=300&width=400';
            document.getElementById('modalMainImage').alt = productName;
            
            const whatsappText = `Hello! I'm interested in the ${productName}${modelNumber ? ` (Model: ${modelNumber})` : ''}. Could you please provide more details?`;
            const emailSubject = `Inquiry about ${productName}`;
            const emailBody = `Hello,\n\nI'm interested in learning more about the ${productName}${modelNumber ? ` (Model: ${modelNumber})` : ''}.\n\nPlease provide details about specifications, pricing, and availability.\n\nThank you!`;
            
            document.getElementById('modalWhatsappBtn').href = `https://wa.me/917424860111?text=${encodeURIComponent(whatsappText)}`;
            document.getElementById('modalEmailBtn').href = `mailto:aspirepackautomation@gmail.com?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
            
            quickViewModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function openInquiryModal(productName, modelNumber) {
            document.getElementById('inquiryProductName').textContent = productName;
            
            const whatsappText = `Hello! I'm interested in the ${productName}${modelNumber ? ` (Model: ${modelNumber})` : ''}. Could you please provide more details?`;
            const emailSubject = `Inquiry about ${productName}`;
            const emailBody = `Hello,\n\nI'm interested in learning more about the ${productName}${modelNumber ? ` (Model: ${modelNumber})` : ''}.\n\nPlease provide details about specifications, pricing, and availability.\n\nThank you!`;
            
            document.getElementById('inquiryWhatsappLink').href = `https://wa.me/917424860111?text=${encodeURIComponent(whatsappText)}`;
            document.getElementById('inquiryEmailLink').href = `mailto:aspirepackautomation@gmail.com?subject=${encodeURIComponent(emailSubject)}&body=${encodeURIComponent(emailBody)}`;
            
            inquiryModal.style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        closeQuickView.addEventListener('click', () => {
            quickViewModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });

        closeInquiry.addEventListener('click', () => {
            inquiryModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        });

        window.addEventListener('click', (e) => {
            if (e.target === quickViewModal) {
                quickViewModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
            if (e.target === inquiryModal) {
                inquiryModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        if (preSlug) {
            filterProducts(preSlug);
            const preselectedItem = document.querySelector(`[data-slug="${preSlug}"]`);
            if (preselectedItem) {
                const categoryItem = preselectedItem.closest('.category-item');
                if (categoryItem) {
                    categoryItem.classList.add('expanded');
                }
            }
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                if (quickViewModal.style.display === 'block') {
                    quickViewModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
                if (inquiryModal.style.display === 'block') {
                    inquiryModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
                // Close mobile menu if open
                if (navMenu.classList.contains('active')) {
                    navMenu.classList.remove('active');
                    mobileToggle.querySelector('i').className = 'fas fa-bars';
                    document.body.style.overflow = 'auto';
                }
            }
            
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                searchInput.focus();
            }
        });

        console.log('Aspire Packaging Products page loaded successfully! ðŸš€');
    </script>
