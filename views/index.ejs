      }, 1000);
    });

    // Initialize AOS
    AOS.init({
      duration: 1000,
      once: true,
      offset: 100
    });

    // Theme Toggle
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    const body = document.body;

    const currentTheme = localStorage.getItem('theme') || 'light';
    body.setAttribute('data-theme', currentTheme);
    themeIcon.className = currentTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';

    themeToggle.addEventListener('click', function() {
      const currentTheme = body.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      
      body.setAttribute('data-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      themeIcon.className = newTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
    });

    // Mobile Menu
    const mobileToggle = document.getElementById('mobileToggle');
    const navMenu = document.getElementById('navMenu');

    mobileToggle.addEventListener('click', function() {
      navMenu.classList.toggle('active');
      const icon = this.querySelector('i');
      icon.className = navMenu.classList.contains('active') ? 'fas fa-times' : 'fas fa-bars';
    });

    // Navbar scroll effect
    const navbar = document.getElementById('navbar');
    window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });

    // Contact Modal Functions
    function openContactModal(productName, modelNumber) {
      const modal = document.getElementById('contactModal');
      const modalProduct = document.getElementById('modalProduct');
      const whatsappLink = document.getElementById('whatsappLink');
      const emailLink = document.getElementById('emailLink');
      
      modalProduct.innerHTML = `<strong>Product:</strong> ${productName}<br><strong>Model:</strong> ${modelNumber}`;
      
      const whatsappMessage = encodeURIComponent(`Hi! I'm interested in ${productName} (Model: ${modelNumber}). Could you please provide more details and pricing information?`);
      const emailSubject = encodeURIComponent(`Inquiry about ${productName} - ${modelNumber}`);
      const emailBody = encodeURIComponent(`Dear Aspire Packaging Team,\n\nI am interested in learning more about the ${productName} (Model: ${modelNumber}).\n\nPlease provide:\n- Detailed specifications\n- Pricing information\n- Delivery timeline\n- Installation and training details\n\nThank you for your time.\n\nBest regards`);
      
      whatsappLink.href = `https://wa.me/919999999999?text=${whatsappMessage}`;
      emailLink.href = `mailto:info@aspirepackaging.com?subject=${emailSubject}&body=${emailBody}`;
      
      modal.style.display = 'block';
      document.body.style.overflow = 'hidden';
    }

    function closeContactModal() {
      const modal = document.getElementById('contactModal');
      modal.style.display = 'none';
      document.body.style.overflow = 'auto';
    }

    // Close modal when clicking outside
    window.addEventListener('click', function(event) {
      const modal = document.getElementById('contactModal');
      if (event.target === modal) {
        closeContactModal();
      }
    });

    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Add loading states to buttons
    document.querySelectorAll('.btn-primary, .category-btn, .inquire-btn').forEach(button => {
      button.addEventListener('click', function() {
        if (!this.classList.contains('inquire-btn')) {
          this.style.opacity = '0.8';
          setTimeout(() => {
            this.style.opacity = '1';
          }, 200);
        }
      });
    });

    console.log('Aspire Packaging - Advanced packaging machinery solutions loaded successfully');
