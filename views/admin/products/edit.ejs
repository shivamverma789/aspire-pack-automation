<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product | Aspire Packaging Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        :root {
            --primary: #8b0000;
            --primary-light: #a31a1a;
            --primary-dark: #660000;
            --text-primary: #2c3e50;
            --text-secondary: #6c757d;
            --text-light: #ffffff;
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-dark: #1a1a1a;
            --border: #dee2e6;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary), var(--primary-light));
            --transition: all 0.3s ease;
            --primary-hover: #7a0000;

            /* Admin specific colors */
            --admin-sidebar-bg: #1a1a1a; /* Darker background for admin sidebar */
            --admin-sidebar-text: #ffffff;
            --admin-sidebar-hover: #2d2d2d;
            --admin-card-bg: #ffffff;
            --admin-card-border: #e1e5e9;
            --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.08);
            --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }
        [data-theme="dark"] {
            --text-primary: #ffffff;
            --text-secondary: #b8bcc8;
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --border: #404040;
            --admin-sidebar-bg: #0d0d0d;
            --admin-sidebar-text: #e0e0e0;
            --admin-sidebar-hover: #1a1a1a;
            --admin-card-bg: #2d2d2d;
            --admin-card-border: #404040;
            --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.2);
            --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-secondary);
            color: var(--text-primary);
            line-height: 1.6;
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-primary);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }
        .preloader.hidden {
            opacity: 0;
            pointer-events: none;
        }
        .loader {
            width: 50px;
            height: 50px;
            border: 3px solid var(--border);
            border-top: 3px solid var(--primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background-color: var(--admin-sidebar-bg);
            color: var(--admin-sidebar-text);
            padding: 2rem 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            height: 100vh;
            transition: width 0.3s ease, background-color 0.3s ease;
            flex-shrink: 0;
        }
        .sidebar-header {
            margin-bottom: 2.5rem;
            text-align: center;
        }
        .sidebar-header h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .sidebar-header h2 i {
            font-size: 1.5rem;
        }
        .sidebar-nav {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        .sidebar-nav a, .sidebar-footer a {
            text-decoration: none;
            color: var(--admin-sidebar-text);
            padding: 0.8rem 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
            font-weight: 500;
            font-size: 1rem;
        }
        .sidebar-nav a i, .sidebar-footer a i {
            font-size: 1.1rem;
            width: 20px; /* Fixed width for icons */
            text-align: center;
            color: var(--primary-light); /* Icon color */
        }
        .sidebar-nav a:hover {
            background-color: var(--admin-sidebar-hover);
            transform: translateX(5px);
        }
        .sidebar-nav a.active {
            background-color: var(--primary);
            color: var(--text-light);
            box-shadow: var(--shadow);
        }
        .sidebar-nav a.active i {
            color: var(--text-light);
        }
        .sidebar-footer {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
        .sidebar-footer a {
            justify-content: center;
            background-color: rgba(255,255,255,0.05);
            color: var(--text-light);
        }
        .sidebar-footer a:hover {
            background-color: var(--primary-dark);
            transform: translateY(-3px);
        }
        .sidebar-footer a i {
            color: var(--text-light);
        }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1;
            padding: 2.5rem;
            background: var(--bg-secondary);
            transition: background-color 0.3s ease;
        }
        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .main-header h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
        }
        .back-to-web-btn {
            background: var(--primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: var(--shadow);
        }
        .back-to-web-btn:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        /* Form Specific Styles */
        .form-container {
            max-width: 900px;
            margin: 0 auto; /* Center the form */
            background: var(--admin-card-bg);
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: var(--admin-card-shadow);
            border: 1px solid var(--admin-card-border);
            transition: all 0.3s ease;
        }
        .form-container:hover {
            box-shadow: var(--admin-card-hover-shadow);
        }
        .form-container h2 {
            text-align: center;
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 2rem;
            position: relative;
            padding-bottom: 0.5rem;
        }
        .form-container h2::after {
            content: '';
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            bottom: 0;
            width: 60px;
            height: 3px;
            background: var(--gradient-primary);
            border-radius: 2px;
        }
        label {
            font-weight: 600;
            display: block;
            margin-top: 1.25rem;
            margin-bottom: 0.5rem;
            color: var(--text-primary);
            font-size: 0.95rem;
        }
        input[type="text"],
        input[type="url"],
        input[type="file"],
        textarea,
        select {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid var(--border);
            margin-bottom: 0.5rem;
            font-size: 1rem;
            color: var(--text-primary);
            background: var(--bg-secondary);
            transition: border-color 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
        }
        input[type="text"]:focus,
        input[type="url"]:focus,
        input[type="file"]:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: var(--primary);
            background-color: var(--bg-primary);
            box-shadow: 0 0 0 3px rgba(139, 0, 0, 0.1);
        }
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        select {
            appearance: none; /* Remove default select arrow */
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%236c757d%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-6.5%200-12.3%203.2-16.1%208.1-3.8%204.9-4.5%2011.5-1.7%2017.4l130%20142c3.8%204.9%2010%207.5%2016.1%207.5s12.3-2.6%2016.1-7.5l130-142c2.8-5.9%202.1-12.5-1.7-17.4z%22%2F%3E%3C%2Fsvg%3E');
            background-repeat: no-repeat;
            background-position: right 10px top 50%;
            background-size: 12px auto;
            padding-right: 30px; /* Space for custom arrow */
        }

        .param-row {
            display: flex;
            gap: 1rem;
            margin-bottom: 0.75rem;
            align-items: center;
        }
        .param-row input {
            flex: 1;
            margin-bottom: 0; /* Remove default margin */
        }
        .remove-param-btn {
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 0.5rem 0.75rem;
            cursor: pointer;
            font-size: 0.9rem;
            transition: background-color 0.3s ease;
            flex-shrink: 0;
        }
        .remove-param-btn:hover {
            background-color: #a71d2a;
        }
        .add-param-btn {
            background-color: var(--primary);
            color: white;
            padding: 0.75rem 1.25rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 0.5rem;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        .add-param-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }

        .submit-btn {
            background-color: var(--primary);
            color: white;
            padding: 1rem 2rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 2rem;
            box-shadow: var(--shadow);
        }
        .submit-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
        }

        /* Image Preview Styles */
        .image-preview-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
            padding: 10px;
            border: 1px dashed var(--border);
            border-radius: 8px;
            min-height: 80px;
            align-items: center;
            justify-content: center;
            color: var(--text-secondary);
            font-size: 0.9rem;
            background-color: var(--bg-secondary);
        }
        .image-preview-container.multiple {
            min-height: 120px;
        }
        .image-preview-container img {
            max-width: 100%;
            max-height: 150px;
            object-fit: contain;
            border-radius: 6px;
            border: 1px solid var(--border);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .image-preview-container.multiple img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }
        .image-preview-placeholder {
            text-align: center;
            color: var(--text-secondary);
            opacity: 0.7;
        }
        .image-preview-placeholder i {
            font-size: 2rem;
            margin-bottom: 5px;
        }

        /* Current Image Display */
        .current-images-section {
            margin-top: 1.25rem;
            margin-bottom: 1rem;
            padding: 10px;
            border: 1px solid var(--border);
            border-radius: 8px;
            background-color: var(--bg-secondary);
        }
        .current-images-section label {
            margin-top: 0;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }
        .current-images-wrapper {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
        }
        .current-img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid var(--border);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .current-pdf-link {
            display: block;
            margin-top: 10px;
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        .current-pdf-link:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        /* Responsive Adjustments */
        @media (max-width: 1024px) {
            .sidebar {
                width: 250px;
            }
            .main-content {
                padding: 2rem;
            }
            .main-header h1 {
                font-size: 2.2rem;
            }
        }
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                padding: 1.5rem 1rem;
                box-shadow: var(--shadow);
            }
            .sidebar-header {
                margin-bottom: 1.5rem;
            }
            .sidebar-nav {
                flex-direction: row;
                flex-wrap: wrap;
                justify-content: center;
                gap: 0.5rem;
            }
            .sidebar-nav a {
                padding: 0.6rem 0.8rem;
                font-size: 0.9rem;
                gap: 0.5rem;
            }
            .sidebar-nav a i {
                font-size: 1rem;
                width: auto;
            }
            .sidebar-footer {
                margin-top: 1.5rem;
                padding-top: 1rem;
            }
            .main-content {
                padding: 1.5rem;
            }
            .main-header {
                flex-direction: column;
                align-items: flex-start;
                margin-bottom: 1.5rem;
            }
            .main-header h1 {
                font-size: 2rem;
                margin-bottom: 1rem;
            }
            .form-container {
                padding: 1.5rem;
            }
            .form-container h2 {
                font-size: 1.75rem;
                margin-bottom: 1.5rem;
            }
            .param-row {
                flex-direction: column;
                gap: 0.5rem;
            }
            .param-row input {
                width: 100%;
            }
            .remove-param-btn {
                width: 100%;
            }
            .image-preview-container.multiple img, .current-img {
                width: 80px;
                height: 80px;
            }
        }
        @media (max-width: 480px) {
            .sidebar-header h2 {
                font-size: 1.5rem;
            }
            .sidebar-nav a {
                font-size: 0.85rem;
                padding: 0.5rem 0.75rem;
            }
            .main-header h1 {
                font-size: 1.8rem;
            }
            input[type="text"],
            input[type="url"],
            input[type="file"],
            textarea,
            select {
                padding: 0.6rem 0.8rem;
                font-size: 0.9rem;
            }
            .add-param-btn, .submit-btn {
                padding: 0.8rem 1.2rem;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="preloader" id="preloader">
        <div class="loader"></div>
    </div>

    <aside class="sidebar" data-aos="fade-right" data-aos-duration="800">
        <div>
            <div class="sidebar-header">
                <h2><i class="fas fa-cogs"></i> Admin Panel</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="/admin/products" class="active"><i class="fas fa-box-open"></i> Manage Products</a>
                <a href="/admin/categories"><i class="fas fa-th-large"></i> Manage Categories</a>
                <a href="/admin/certificates"><i class="fas fa-certificate"></i> Manage Certificates</a>
                <a href="/admin/users"><i class="fas fa-users"></i> Manage Users</a>
                <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
            </nav>
        </div>
        <div class="sidebar-footer">
            <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </aside>

    <main class="main-content">
        <div class="main-header" data-aos="fade-down" data-aos-duration="800" data-aos-delay="200">
            <h1>Edit Product</h1>
            <a href="/admin/products" class="back-to-web-btn">
                <i class="fas fa-arrow-left"></i> Back to Products
            </a>
        </div>

        <div class="form-container" data-aos="fade-up" data-aos-delay="300">
            <h2>Edit Product Details</h2>
            <form action="/admin/products/update/<%= product._id %>" method="POST" enctype="multipart/form-data">
                <label>Product Name</label>
                <input type="text" name="productName" value="<%= product.productName %>" required />
                <label>Model Number</label>
                <input type="text" name="productModelNumber" value="<%= product.productModelNumber %>" required />
                <label>Short Description</label>
                <input type="text" name="shortDescription" value="<%= product.shortDescription %>" />
                <label>Description</label>
                <textarea name="productDescription" rows="5"><%= product.productDescription %></textarea>
                <label>Features (comma separated)</label>
                <input type="text" name="productFeatures" value="<%= product.productFeatures.join(', ') %>" />
                <label>Applications (comma separated)</label>
                <input type="text" name="productApplications" value="<%= product.productApplications.join(', ') %>" />
                 Main Category 
                <label>Main Category</label>
                <select name="mainCategory" id="mainCategory" required>
                    <% mainCategories.forEach(cat => { %>
                        <option value="<%= cat._id %>" <%= product.categoryId?.toString() === cat._id.toString() ? 'selected' : '' %>><%= cat.name %></option>
                    <% }) %>
                </select>
                 Sub Category 
                <label>Sub Category</label>
                <select name="subCategory" id="subCategory">
                    <option value="">-- None --</option>
                    <% subCategories.forEach(sub => { %>
                        <option value="<%= sub._id %>" data-parent="<%= sub.parentCategory %>" <%= product.subCategoryId?.toString() === sub._id.toString() ? 'selected' : '' %>><%= sub.name %></option>
                    <% }) %>
                </select>
                 Technical Parameters 
                <label>Technical Parameters</label>
                <div id="param-container">
                    <% product.productParameters.forEach((p, index) => { %>
                        <div class="param-row">
                            <input type="text" name="productParameters[<%= index %>][key]" value="<%= p.key %>" placeholder="Key" />
                            <input type="text" name="productParameters[<%= index %>][value]" value="<%= p.value %>" placeholder="Value" />
                            <button type="button" class="remove-param-btn" onclick="removeParam(this)">- Remove</button>
                        </div>
                    <% }) %>
                </div>
                <button type="button" class="add-param-btn" onclick="addParam()">+ Add Parameter</button>
                <label>Video URL</label>
                <input type="text" name="videoURL" value="<%= product.videoURL %>" />

                <label for="specPDF">Specification PDF</label>
                <input type="file" id="specPDF" name="specPDF" accept="application/pdf" />
                <% if (product.specPDF) { %>
                    <a href="<%= product.specPDF %>" target="_blank" class="current-pdf-link">View current PDF</a>
                <% } %>

                <div class="current-images-section">
                    <label>Current Cover Image:</label>
                    <div class="current-images-wrapper">
                        <% if (product.coverImage) { %>
                            <img class="current-img" src="<%= product.coverImage %>" alt="Current Cover" />
                        <% } else { %>
                            <p>No current cover image.</p>
                        <% } %>
                    </div>
                </div>
                <label for="coverImage">Upload New Cover Image</label>
                <input type="file" id="coverImage" name="coverImage" accept="image/*" onchange="previewCoverImage(event)" />
                <div id="coverImagePreview" class="image-preview-container">
                    <div class="image-preview-placeholder">
                        <i class="fas fa-image"></i>
                        <p>No new cover image selected</p>
                    </div>
                </div>

                <div class="current-images-section">
                    <label>Current Product Images:</label>
                    <div class="current-images-wrapper">
                        <% if (product.productImages && product.productImages.length > 0) { %>
                            <% product.productImages.forEach(img => { %>
                                <img class="current-img" src="<%= img %>" alt="Product Image" />
                            <% }) %>
                        <% } else { %>
                            <p>No current product images.</p>
                        <% } %>
                    </div>
                </div>
                <label for="productImages">Upload New Product Images (Multiple)</label>
                <input type="file" id="productImages" name="productImages" accept="image/*" multiple onchange="previewProductImages(event)" />
                <div id="productImagesPreview" class="image-preview-container multiple">
                    <div class="image-preview-placeholder">
                        <i class="fas fa-images"></i>
                        <p>No new product images selected</p>
                    </div>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-save"></i> Update Product
                </button>
            </form>
        </div>
    </main>

    <script>
        window.addEventListener('load', function() {
            const preloader = document.getElementById('preloader');
            setTimeout(() => {
                preloader.classList.add('hidden');
            }, 500);
        });
        AOS.init({
            duration: 1000,
            once: true,
            offset: 50
        });

        let paramIndex = <%= product.productParameters.length %>; // Start index from existing parameters
        function addParam() {
            const container = document.getElementById('param-container');
            const row = document.createElement('div');
            row.className = 'param-row';
            row.innerHTML = `
                <input type="text" name="productParameters[${paramIndex}][key]" placeholder="Key" />
                <input type="text" name="productParameters[${paramIndex}][value]" placeholder="Value" />
                <button type="button" class="remove-param-btn" onclick="removeParam(this)">- Remove</button>
            `;
            container.appendChild(row);
            paramIndex++;
        }

        function removeParam(button) {
            button.closest('.param-row').remove();
        }

        const mainCategorySelect = document.getElementById('mainCategory');
        const subCategorySelect = document.getElementById('subCategory');
        function filterSubCategories() {
            const selectedMainCat = mainCategorySelect.value;
            const subOptions = subCategorySelect.querySelectorAll('option');
            subOptions.forEach(opt => {
                if (!opt.value) return; // always show "--None--"
                const parentId = opt.getAttribute('data-parent');
                if (parentId === selectedMainCat) {
                    opt.style.display = 'block';
                } else {
                    opt.style.display = 'none';
                    // Reset if selected sub doesn't belong to current main
                    if (opt.selected) opt.selected = false;
                }
            });
        }
        mainCategorySelect.addEventListener('change', filterSubCategories);
        window.addEventListener('DOMContentLoaded', filterSubCategories);

        function previewCoverImage(event) {
            const previewContainer = document.getElementById('coverImagePreview');
            previewContainer.innerHTML = `
                <div class="image-preview-placeholder">
                    <i class="fas fa-image"></i>
                    <p>No new cover image selected</p>
                </div>
            `; // Reset to placeholder

            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'New Cover Image Preview';
                    previewContainer.innerHTML = ''; // Clear placeholder
                    previewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        }

        function previewProductImages(event) {
            const previewContainer = document.getElementById('productImagesPreview');
            previewContainer.innerHTML = `
                <div class="image-preview-placeholder">
                    <i class="fas fa-images"></i>
                    <p>No new product images selected</p>
                </div>
            `; // Reset to placeholder

            const files = event.target.files;
            if (files.length > 0) {
                previewContainer.innerHTML = ''; // Clear placeholder
                Array.from(files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.alt = 'New Product Image Preview';
                        previewContainer.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                });
            }
        }
    </script>
