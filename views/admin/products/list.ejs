            _id: 'cat3_id', // Added _id for matching
            name: 'Wrapping Machines',
            slug: 'wrapping-machines',
            subcategories: [
                { _id: 'sub2', name: 'Stretch Wrappers', slug: 'stretch-wrappers', parentCategory: 'cat3_id' },
                { _id: 'sub4', name: 'Shrink Wrappers', slug: 'shrink-wrappers', parentCategory: 'cat3_id' }
            ]
        }
    ];

    // Use the server-provided categories if available and not empty, otherwise use fallback


    // Store all subcategory options initially, excluding the "All Subcategories" option
    const allSubcategoryOptions = Array.from(subCategoryFilter.querySelectorAll('option')).filter(option => option.value !== '');

    function filterSubcategories() {
        const selectedCategorySlug = categoryFilter.value;
        let selectedCategoryId = '';

        // Find the _id of the selected main category
        if (selectedCategorySlug) {
            const categoryOption = categoryFilter.querySelector(`option[value="${selectedCategorySlug}"]`);
            if (categoryOption) {
                selectedCategoryId = categoryOption.dataset.id;
            }
        }

        // Reset subcategory filter to "All Subcategories"
        subCategoryFilter.value = '';

        let hasVisibleSubcategories = false;
        allSubcategoryOptions.forEach(option => {
            const parentId = option.dataset.parent; // This will be the _id of the parent category
            if (!selectedCategoryId || parentId === selectedCategoryId) {
                option.style.display = 'block'; // Show the option
                hasVisibleSubcategories = true;
            } else {
                option.style.display = 'none'; // Hide the option
            }
        });

        // Disable subcategory filter if no main category is selected or if the selected category has no subcategories
        subCategoryFilter.disabled = !selectedCategoryId || !hasVisibleSubcategories;
    }

    function applyFiltersAndSort() {
        let visibleCount = 0;
        const searchTerm = searchInput.value.toLowerCase().trim();
        const selectedCategory = categoryFilter.value;
        const selectedSubcategory = subCategoryFilter.value;
        const sortValue = sortSelect.value;

        // Filter rows based on search, category, and subcategory
        const filteredAndSortedRows = allProductRows.filter(row => {
            const productName = row.dataset.name;
            const modelNumber = row.dataset.model;
            const productCategory = row.dataset.category;
            const productSubcategory = row.dataset.subcategory;

            const matchesSearch = !searchTerm || productName.includes(searchTerm) || modelNumber.includes(searchTerm);
            const matchesCategory = !selectedCategory || productCategory === selectedCategory;
            const matchesSubcategory = !selectedSubcategory || productSubcategory === selectedSubcategory;

            return matchesSearch && matchesCategory && matchesSubcategory;
        });

        // Sort the filtered rows
        filteredAndSortedRows.sort((a, b) => {
            const nameA = a.dataset.name;
            const nameB = b.dataset.name;
            const modelA = a.dataset.model;
            const modelB = b.dataset.model;

            switch (sortValue) {
                case 'name-asc': return nameA.localeCompare(nameB);
                case 'name-desc': return nameB.localeCompare(nameA);
                case 'model-asc': return modelA.localeCompare(modelB);
                case 'model-desc': return modelB.localeCompare(modelA);
                default: return 0;
            }
        });

        // Update table display
        productTableBody.innerHTML = ''; // Clear current rows
        if (filteredAndSortedRows.length > 0) {
            filteredAndSortedRows.forEach(row => productTableBody.appendChild(row));
            visibleCount = filteredAndSortedRows.length;
        } else {
            productTableBody.innerHTML = `
                <tr>
                    <td colspan="6">
                        <div class="no-products-message">
                            <i class="fas fa-search"></i>
                            <h3>No Matching Products Found</h3>
                            <p>Try adjusting your search or filter criteria.</p>
                        </div>
                    </td>
                </tr>
            `;
        }
        resultsInfo.textContent = `Showing ${visibleCount} products`;
    }

    // Event Listeners
    applyFiltersBtn.addEventListener('click', applyFiltersAndSort);
    
    categoryFilter.addEventListener('change', function() {
        filterSubcategories(); // Filter subcategories immediately on main category change
        // applyFiltersAndSort() is NOT called here, it's only called by the button
    });
    
    // Initial setup on page load
    filterSubcategories(); // Apply subcategory filtering based on initial category selection
    applyFiltersAndSort(); // Apply all filters and sort based on initial state

    // Adjust display type on window resize for responsive table
    window.addEventListener('resize', applyFiltersAndSort);
</script>
