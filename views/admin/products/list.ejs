<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Manage Products | Aspire Packaging Admin</title>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
<style>
    :root {
        --primary: #8b0000;
        --primary-light: #a31a1a;
        --primary-dark: #660000;
        --text-primary: #2c3e50;
        --text-secondary: #6c757d;
        --text-light: #ffffff;
        --bg-primary: #ffffff;
        --bg-secondary: #f8f9fa;
        --bg-dark: #1a1a1a;
        --border: #dee2e6;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.15);
        --gradient-primary: linear-gradient(135deg, var(--primary), var(--primary-light));
        --transition: all 0.3s ease;
        --primary-hover: #7a0000;

        /* Admin specific colors */
        --admin-sidebar-bg: #1a1a1a; /* Darker background for admin sidebar */
        --admin-sidebar-text: #ffffff;
        --admin-sidebar-hover: #2d2d2d;
        --admin-card-bg: #ffffff;
        --admin-card-border: #e1e5e9;
        --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.08);
        --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    [data-theme="dark"] {
        --text-primary: #ffffff;
        --text-secondary: #b8bcc8;
        --bg-primary: #1a1a1a;
        --bg-secondary: #2d2d2d;
        --border: #404040;
        --admin-sidebar-bg: #0d0d0d;
        --admin-sidebar-text: #e0e0e0;
        --admin-sidebar-hover: #1a1a1a;
        --admin-card-bg: #2d2d2d;
        --admin-card-border: #404040;
        --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.2);
        --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        font-family: 'Inter', sans-serif;
        background: var(--bg-secondary);
        color: var(--text-primary);
        line-height: 1.6;
        display: flex;
        min-height: 100vh;
        overflow-x: hidden;
    }

    .preloader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: var(--bg-primary);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
        transition: opacity 0.5s ease;
    }
    .preloader.hidden {
        opacity: 0;
        pointer-events: none;
    }
    .loader {
        width: 50px;
        height: 50px;
        border: 3px solid var(--border);
        border-top: 3px solid var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Sidebar Styles (Copied from admin-dashboard.ejs) */
    .sidebar {
        width: 280px;
        background-color: var(--admin-sidebar-bg);
        color: var(--admin-sidebar-text);
        padding: 2rem 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: var(--shadow);
        position: sticky;
        top: 0;
        height: 100vh;
        transition: width 0.3s ease, background-color 0.3s ease;
        flex-shrink: 0;
    }
    .sidebar-header {
        margin-bottom: 2.5rem;
        text-align: center;
    }
    .sidebar-header h2 {
        font-family: 'Poppins', sans-serif;
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }
    .sidebar-header h2 i {
        font-size: 1.5rem;
    }
    .sidebar-nav {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .sidebar-nav a, .sidebar-footer a {
        text-decoration: none;
        color: var(--admin-sidebar-text);
        padding: 0.8rem 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        border-radius: 8px;
        transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
        font-weight: 500;
        font-size: 1rem;
    }
    .sidebar-nav a i, .sidebar-footer a i {
        font-size: 1.1rem;
        width: 20px; /* Fixed width for icons */
        text-align: center;
        color: var(--primary-light); /* Icon color */
    }
    .sidebar-nav a:hover {
        background-color: var(--admin-sidebar-hover);
        transform: translateX(5px);
    }
    .sidebar-nav a.active {
        background-color: var(--primary);
        color: var(--text-light);
        box-shadow: var(--shadow);
    }
    .sidebar-nav a.active i {
        color: var(--text-light);
    }
    .sidebar-footer {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255,255,255,0.1);
    }
    .sidebar-footer a {
        justify-content: center;
        background-color: rgba(255,255,255,0.05);
        color: var(--text-light);
    }
    .sidebar-footer a:hover {
        background-color: var(--primary-dark);
        transform: translateY(-3px);
    }
    .sidebar-footer a i {
        color: var(--text-light);
    }

    /* Main Content Styles */
    .main-content {
        flex-grow: 1;
        padding: 2.5rem;
        background: var(--bg-secondary);
        transition: background-color 0.3s ease;
    }
    .main-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .main-header h1 {
        font-family: 'Poppins', sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary);
    }
    .back-to-web-btn {
        background: var(--primary);
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow);
    }
    .back-to-web-btn:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }

    /* Controls Bar (Search, Sort, Filter) */
    .controls-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.5rem;
        background: var(--bg-primary);
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: var(--admin-card-shadow);
        border: 1px solid var(--admin-card-border);
    }
    .search-filter-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        flex-grow: 1;
    }
    .search-wrapper {
        position: relative;
        flex-grow: 1;
        min-width: 250px;
    }
    .search-input, .filter-select, .sort-select {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid var(--border);
        border-radius: 8px;
        background: var(--bg-secondary);
        color: var(--text-primary);
        font-size: 1rem;
        transition: var(--transition);
        appearance: none; /* Remove default select arrow */
        -webkit-appearance: none;
        -moz-appearance: none;
        background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%236c757d%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-6.5%200-12.3%203.2-16.1%208.1-3.8%204.9-4.5%2011.5-1.7%2017.4l130%20142c3.8%204.9%2010%207.5%2016.1%207.5s12.3-2.6%2016.1-7.5l130-142c2.8-5.9%202.1-12.5-1.7-17.4z%22%2F%3E%3C%2Fsvg%3E');
        background-repeat: no-repeat;
        background-position: right 10px top 50%;
        background-size: 12px auto;
        padding-right: 30px; /* Space for custom arrow */
    }
    .search-input {
        padding-right: 45px; /* Space for search icon */
    }
    .search-input:focus, .filter-select:focus, .sort-select:focus {
        outline: none;
        border-color: var(--primary);
        background-color: var(--bg-primary);
        box-shadow: 0 0 0 3px rgba(139, 0, 0, 0.1);
    }
    .search-btn {
        position: absolute;
        right: 5px;
        top: 50%;
        transform: translateY(-50%);
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 6px;
        width: 35px;
        height: 35px;
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .search-btn:hover {
        background: var(--primary-hover);
    }
    .apply-filters-btn {
        background: var(--primary);
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        transition: var(--transition);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow);
    }
    .apply-filters-btn:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }
    .add-product-btn {
        background: var(--gradient-primary);
        color: var(--text-light);
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition);
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow);
    }
    .add-product-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }
    .results-info {
        color: var(--text-secondary);
        font-size: 0.95rem;
        white-space: nowrap; /* Prevent wrapping */
    }

    /* Product Table */
    .product-table-container {
        background: var(--bg-primary);
        border-radius: 12px;
        box-shadow: var(--admin-card-shadow);
        overflow-x: auto; /* For responsive table */
        border: 1px solid var(--admin-card-border);
    }
    .product-table {
        width: 100%;
        border-collapse: separate; /* For rounded corners on cells */
        border-spacing: 0;
        min-width: 800px; /* Ensure table doesn't shrink too much */
    }
    .product-table th, .product-table td {
        padding: 1rem 1.2rem;
        text-align: left;
        border-bottom: 1px solid var(--border);
        color: var(--text-primary);
    }
    .product-table th {
        background-color: var(--bg-secondary);
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: var(--text-secondary);
        position: sticky;
        top: 0;
        z-index: 1;
    }
    .product-table tbody tr:last-child td {
        border-bottom: none;
    }
    .product-table tbody tr:hover {
        background-color: var(--bg-secondary);
    }
    .product-table td img {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid var(--border);
    }
    .product-table .actions {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .product-table .actions a {
        padding: 8px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: var(--transition);
    }
    .edit-btn {
        background-color: #007bff; /* Blue */
        color: white;
    }
    .edit-btn:hover {
        background-color: #0056b3;
        transform: translateY(-2px);
    }
    .delete-btn {
        background-color: #dc3545; /* Red */
        color: white;
    }
    .delete-btn:hover {
        background-color: #a71d2a;
        transform: translateY(-2px);
    }
    .view-btn {
        background-color: #28a745; /* Green */
        color: white;
    }
    .view-btn:hover {
        background-color: #1e7e34;
        transform: translateY(-2px);
    }
    .no-products-message {
        text-align: center;
        padding: 3rem;
        color: var(--text-secondary);
        font-size: 1.1rem;
    }
    .no-products-message i {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: var(--primary);
        opacity: 0.7;
    }

    /* Responsive Adjustments */
    @media (max-width: 1024px) {
        .sidebar {
            width: 250px;
        }
        .main-content {
            padding: 2rem;
        }
        .main-header h1 {
            font-size: 2.2rem;
        }
        .controls-bar {
            flex-direction: column;
            align-items: stretch;
        }
        .search-filter-group {
            flex-direction: column;
            gap: 0.75rem;
        }
        .search-wrapper, .filter-select, .sort-select {
            min-width: unset;
            width: 100%;
        }
        .results-info {
            text-align: center;
            width: 100%;
        }
    }
    @media (max-width: 768px) {
        body {
            flex-direction: column;
        }
        .sidebar {
            width: 100%;
            height: auto;
            position: static;
            padding: 1.5rem 1rem;
            box-shadow: var(--shadow);
        }
        .sidebar-header {
            margin-bottom: 1.5rem;
        }
        .sidebar-nav {
            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.5rem;
        }
        .sidebar-nav a {
            padding: 0.6rem 0.8rem;
            font-size: 0.9rem;
            gap: 0.5rem;
        }
        .sidebar-nav a i {
            font-size: 1rem;
            width: auto;
        }
        .sidebar-footer {
            margin-top: 1.5rem;
            padding-top: 1rem;
        }
        .main-content {
            padding: 1.5rem;
        }
        .main-header {
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 1.5rem;
        }
        .main-header h1 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }
        .product-table-container {
            border-radius: 8px;
        }
        .product-table {
            min-width: unset; /* Allow table to shrink on small screens */
        }
        .product-table thead {
            display: none; /* Hide table header on small screens */
        }
        .product-table tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: var(--admin-card-shadow);
        }
        .product-table td {
            display: block;
            text-align: right;
            padding-left: 50%;
            position: relative;
            border-bottom: 1px dashed var(--border);
        }
        .product-table td:last-child {
            border-bottom: none;
        }
    .product-table td::before {
        content: attr(data-label);
        position: absolute;
        left: 1rem;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        font-size: 0.8rem;
    }
    .product-table td img {
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .product-table .actions {
        justify-content: flex-end;
        padding-top: 1rem;
    }
}
@media (max-width: 480px) {
    .sidebar-header h2 {
        font-size: 1.5rem;
    }
    .sidebar-nav a {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
    }
    .main-header h1 {
        font-size: 1.8rem;
    }
    .search-input, .filter-select, .sort-select {
        padding: 10px 12px;
        font-size: 0.9rem;
    }
    .add-product-btn {
        padding: 0.6rem 1rem;
        font-size: 0.9rem;
    }
    .product-table td {
        padding-left: 45%;
    }
    .product-table td::before {
        left: 0.75rem;
    }
}
</style>
</head>
<body>
<div class="preloader" id="preloader">
    <div class="loader"></div>
</div>

<aside class="sidebar" data-aos="fade-right" data-aos-duration="800">
    <div>
        <div class="sidebar-header">
            <h2><i class="fas fa-cogs"></i> Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
            <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a href="/admin/products" class="active"><i class="fas fa-box-open"></i> Manage Products</a>
            <a href="/admin/categories"><i class="fas fa-th-large"></i> Manage Categories</a>
            <a href="/admin/certificates"><i class="fas fa-certificate"></i> Manage Certificates</a>
            <a href="/admin/users"><i class="fas fa-users"></i> Manage Users</a>
            <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
        </nav>
    </div>
    <div class="sidebar-footer">
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
</aside>

<main class="main-content">
    <div class="main-header" data-aos="fade-down" data-aos-duration="800" data-aos-delay="200">
        <h1>Manage Products</h1>
        <a href="/" class="back-to-web-btn">
            <i class="fas fa-globe"></i> Back to User Web
        </a>
    </div>

    <div class="controls-bar" data-aos="fade-up" data-aos-delay="300">
        <div class="search-filter-group">
            <div class="search-wrapper">
                <input type="text" id="searchInput" class="search-input" placeholder="Search products...">
                <button class="search-btn" aria-label="Search"><i class="fas fa-search"></i></button>
            </div>
            
            <select id="categoryFilter" class="filter-select" aria-label="Filter by Category">
                <option value="">All Categories</option>
                <% if (typeof categories !== 'undefined' && categories && Array.isArray(categories)) { %>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat.slug %>" data-id="<%= cat._id %>"><%= cat.name %></option>
                    <% }) %>
                <% } %>
            </select>

            <select id="subCategoryFilter" class="filter-select" aria-label="Filter by Subcategory">
                <option value="">All Subcategories</option>
                <% if (typeof subcategories !== 'undefined' && subcategories && Array.isArray(subcategories)) { %>
                    <% subcategories.forEach(sub => { %>
                        <option data-parent="<%= sub.parentCategory %>" value="<%= sub.slug %>"><%= sub.name %></option>
                    <% }) %>
                <% } %>
            </select>

            <select id="sortSelect" class="sort-select" aria-label="Sort Products">
                <option value="name-asc">Name (A-Z)</option>
                <option value="name-desc">Name (Z-A)</option>
                <option value="model-asc">Model (Asc)</option>
                <option value="model-desc">Model (Desc)</option>
            </select>
            <button id="applyFiltersBtn" class="apply-filters-btn">
                <i class="fas fa-filter"></i> Apply Filters
            </button>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="results-info" id="resultsInfo">Showing 0 products</span>
            <a href="/admin/products/new" class="add-product-btn">
                <i class="fas fa-plus"></i> Add New Product
            </a>
        </div>
    </div>

    <div class="product-table-container" data-aos="fade-up" data-aos-delay="400">
        <table class="product-table" id="productTable">
            <thead>
                <tr>
                    <th>Cover</th>
                    <th>Product Name</th>
                    <th>Model Number</th>
                    <th>Category</th>
                    <th>Subcategory</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof products !== 'undefined' && products && Array.isArray(products) && products.length > 0) { %>
                    <% products.forEach(p => { %>
                        <tr data-name="<%= p.productName.toLowerCase() %>" 
                            data-model="<%= (p.productModelNumber || '').toLowerCase() %>"
                            data-category="<%= p.categoryId?.slug || '' %>"
                            data-subcategory="<%= p.subCategoryId?.slug || '' %>">
                            <td data-label="Cover">
                                <img src="<%= p.coverImage || '/placeholder.svg?height=60&width=60' %>" alt="<%= p.productName %> Cover">
                            </td>
                            <td data-label="Product Name"><%= p.productName %></td>
                            <td data-label="Model Number"><%= p.productModelNumber || '' %></td>
                            <td data-label="Category"><%= p.categoryId?.name || '' %></td>
                            <td data-label="Subcategory"><%= p.subCategoryId?.name || '' %></td>
                            <td data-label="Actions" class="actions">
                                <a href="/admin/products/edit/<%= p._id %>" class="edit-btn" aria-label="Edit <%= p.productName %>"><i class="fas fa-edit"></i> Edit</a>
                                <a href="/admin/products/delete/<%= p._id %>" class="delete-btn" onclick="return confirm('Are you sure you want to delete <%= p.productName %>? This action cannot be undone.');" aria-label="Delete <%= p.productName %>"><i class="fas fa-trash-alt"></i> Delete</a>
                                <a href="/product/<%= p.slug %>" target="_blank" class="view-btn" aria-label="View <%= p.productName %> on website"><i class="fas fa-eye"></i> View</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6">
                            <div class="no-products-message">
                                <i class="fas fa-box-open"></i>
                                <h3>No Products Found</h3>
                                <p>It looks like there are no products to display. Start by adding a new product!</p>
                            </div>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</main>

<script>
    window.addEventListener('load', function() {
        const preloader = document.getElementById('preloader');
        setTimeout(() => {
            preloader.classList.add('hidden');
        }, 500);
    });
    AOS.init({
        duration: 1000,
        once: true,
        offset: 50
    });

    const searchInput = document.getElementById('searchInput');
    const categoryFilter = document.getElementById('categoryFilter');
    const subCategoryFilter = document.getElementById('subCategoryFilter');
    const sortSelect = document.getElementById('sortSelect');
    const applyFiltersBtn = document.getElementById('applyFiltersBtn');
    const productTableBody = document.querySelector('#productTable tbody');
    const resultsInfo = document.getElementById('resultsInfo');
    
    let allProductRows = Array.from(productTableBody.querySelectorAll('tr')).filter(row => !row.querySelector('.no-products-message'));
    let noProductsMessageRow = productTableBody.querySelector('.no-products-message') ? productTableBody.querySelector('.no-products-message').closest('tr') : null;

    // Fallback categories data if not provided by the server
    // Ensure fallback categories include _id for matching with subcategories
    const fallbackCategories = [
        {
            _id: 'cat1_id', // Added _id for matching
            name: 'Vacuum Sealing Machines',
            slug: 'vacuum-sealing',
            subcategories: [
                { _id: 'sub1', name: 'Industrial Sealers', slug: 'industrial-sealers', parentCategory: 'cat1_id' },
                { _id: 'sub3', name: 'Commercial Sealers', slug: 'commercial-sealers', parentCategory: 'cat1_id' }
            ]
        },
        {
            _id: 'cat2_id', // Added _id for matching
            name: 'Box Packing Machines',
            slug: 'box-packing',
            subcategories: []
        },
