<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Category - Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
      padding: 2rem;
    }

    .card {
      max-width: 600px;
      margin: auto;
      border: none;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(0,0,0,0.05);
    }

    .card-header {
      background-color: #8b0000;
      color: white;
      font-size: 1.25rem;
      font-weight: bold;
      border-radius: 12px 12px 0 0;
    }

    .btn-primary {
      background-color: #8b0000;
      border-color: #8b0000;
    }

    .btn-primary:hover {
      background-color: #a40000;
    }

    label {
      font-weight: 500;
    }

    .preview-img {
      max-width: 150px;
      margin-top: 10px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body>

  <div class="card">
    <div class="card-header text-center">
      ✏️ Edit Category
    </div>
    <div class="card-body">
      <form action="/admin/categories/edit/<%= category._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Category Name</label>
          <input type="text" name="name" id="name" value="<%= category.name %>" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image (Upload to Replace)</label>
          <input type="file" name="coverImage" id="coverImage" class="form-control" accept="image/*">
          <img src="<%= category.coverImage %>" alt="Current Cover Image" class="preview-img">
        </div>

        <div class="mb-3">
          <label for="parentCategory" class="form-label">Parent Category (optional)</label>
          <select name="parentCategory" id="parentCategory" class="form-control">
            <option value="">-- No Parent (Main Category) --</option>
            <% mainCategories.forEach(cat => { %>
              <option value="<%= cat._id %>"
                <%= category.parentCategory && category.parentCategory.toString() === cat._id.toString() ? 'selected' : '' %>>
                <%= cat.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="d-flex justify-content-between">
          <a href="/admin/categories" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Update Category</button>
        </div>
      </form>
    </div>
  </div>

</body>
</html>
