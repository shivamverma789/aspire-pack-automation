<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Category - Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        :root {
            --primary: #8b0000;
            --primary-light: #a31a1a;
            --primary-dark: #660000;
            --text-primary: #2c3e50;
            --text-secondary: #6c757d;
            --text-light: #ffffff;
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-dark: #1a1a1a;
            --border: #dee2e6;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary), var(--primary-light));
            --transition: all 0.3s ease;
            --primary-hover: #7a0000;

            /* Admin specific colors */
            --admin-sidebar-bg: #1a1a1a; /* Darker background for admin sidebar */
            --admin-sidebar-text: #ffffff;
            --admin-sidebar-hover: #2d2d2d;
            --admin-card-bg: #ffffff;
            --admin-card-border: #e1e5e9;
            --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.08);
            --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }
        [data-theme="dark"] {
            --text-primary: #ffffff;
            --text-secondary: #b8bcc8;
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --border: #404040;
            --admin-sidebar-bg: #0d0d0d;
            --admin-sidebar-text: #e0e0e0;
            --admin-sidebar-hover: #1a1a1a;
            --admin-card-bg: #2d2d2d;
            --admin-card-border: #404040;
            --admin-card-shadow: 0 2px 10px rgba(0,0,0,0.2);
            --admin-card-hover-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-secondary);
            color: var(--text-primary);
            line-height: 1.6;
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background-color: var(--admin-sidebar-bg);
            color: var(--admin-sidebar-text);
            padding: 2rem 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            height: 100vh;
            transition: width 0.3s ease, background-color 0.3s ease;
            flex-shrink: 0;
        }
        .sidebar-header {
            margin-bottom: 2.5rem;
            text-align: center;
        }
        .sidebar-header h2 {
            font-family: 'Poppins', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .sidebar-header h2 i {
            font-size: 1.5rem;
        }
        .sidebar-nav {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        .sidebar-nav a, .sidebar-footer a {
            text-decoration: none;
            color: var(--admin-sidebar-text);
            padding: 0.8rem 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            border-radius: 8px;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
            font-weight: 500;
            font-size: 1rem;
        }
        .sidebar-nav a i, .sidebar-footer a i {
            font-size: 1.1rem;
            width: 20px; /* Fixed width for icons */
            text-align: center;
            color: var(--primary-light); /* Icon color */
        }
        .sidebar-nav a:hover {
            background-color: var(--admin-sidebar-hover);
            transform: translateX(5px);
        }
        .sidebar-nav a.active {
            background-color: var(--primary);
            color: var(--text-light);
            box-shadow: var(--shadow);
        }
        .sidebar-nav a.active i {
            color: var(--text-light);
        }
        .sidebar-footer {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
        .sidebar-footer a {
            justify-content: center;
            background-color: rgba(255,255,255,0.05);
            color: var(--text-light);
        }
        .sidebar-footer a:hover {
            background-color: var(--primary-dark);
            transform: translateY(-3px);
        }
        .sidebar-footer a i {
            color: var(--text-light);
        }

        /* Main Content Styles */
        .main-content {
            flex-grow: 1;
            padding: 2.5rem;
            background: var(--bg-secondary);
            transition: background-color 0.3s ease;
        }
        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .main-header h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary);
        }
        .back-to-web-btn {
            background: var(--primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            box-shadow: var(--shadow);
        }
        .back-to-web-btn:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }

        /* Form Specific Styles */
        .form-container {
            max-width: 900px; /* Adjusted for consistency with product forms */
            margin: auto;
            background: var(--admin-card-bg);
            padding: 30px 40px;
            border-radius: 12px; /* Consistent with admin cards */
            box-shadow: var(--admin-card-shadow);
            border: 1px solid var(--admin-card-border);
        }
        h2.form-title {
            text-align: center;
            color: var(--primary);
            margin-bottom: 20px;
            font-size: 1.75rem;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }
        label {
            font-weight: 600;
            display: block;
            margin-top: 15px;
            margin-bottom: 5px;
            color: var(--text-primary);
        }
        input[type="text"],
        input[type="file"],
        textarea,
        select {
            width: 100%;
            padding: 12px; /* Slightly larger padding */
            border-radius: 8px; /* More rounded corners */
            border: 1px solid var(--border);
            margin-bottom: 15px; /* More spacing */
            font-size: 1rem;
            background-color: var(--bg-primary);
            color: var(--text-primary);
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        input[type="text"]:focus,
        input[type="file"]:focus,
        textarea:focus,
        select:focus {
            border-color: var(--primary-light);
            box-shadow: 0 0 0 3px rgba(139, 0, 0, 0.2);
            outline: none;
        }
        textarea {
            resize: vertical;
        }
        .submit-btn {
            background-color: var(--primary);
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-size: 1.1rem; /* Slightly larger font */
            font-weight: 600;
            margin-top: 20px;
            transition: var(--transition);
            box-shadow: var(--shadow);
        }
        .submit-btn:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }
        .image-preview-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 10px;
            margin-bottom: 20px;
        }
        .image-preview {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border: 1px solid var(--border);
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            box-shadow: var(--shadow);
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: var(--shadow-hover);
        }
        .d-flex {
            display: flex;
        }
        .justify-content-between {
            justify-content: space-between;
        }
        .mb-3 {
            margin-bottom: 1rem;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }
            .sidebar {
                width: 100%;
                height: auto;
                position: static;
                padding: 1.5rem 1rem;
                box-shadow: var(--shadow);
            }
            .sidebar-header {
                margin-bottom: 1.5rem;
            }
            .sidebar-nav {
                flex-direction: row;
                flex-wrap: wrap;
                justify-content: center;
                gap: 0.5rem;
            }
            .sidebar-nav a {
                padding: 0.6rem 0.8rem;
                font-size: 0.9rem;
                gap: 0.5rem;
            }
            .sidebar-nav a i {
                font-size: 1rem;
                width: auto;
            }
            .sidebar-footer {
                margin-top: 1.5rem;
                padding-top: 1rem;
            }
            .main-content {
                padding: 1.5rem;
            }
            .main-header {
                flex-direction: column;
                align-items: flex-start;
                margin-bottom: 1.5rem;
            }
            .main-header h1 {
                font-size: 2rem;
                margin-bottom: 1rem;
            }
            .form-container {
                padding: 20px;
            }
            .submit-btn, .btn-secondary {
                width: auto; /* Allow buttons to size naturally */
                flex-grow: 1; /* Distribute space */
            }
            .d-flex.justify-content-between {
                flex-direction: column;
                gap: 15px;
            }
        }
        @media (max-width: 480px) {
            .sidebar-header h2 {
                font-size: 1.5rem;
            }
            .sidebar-nav a {
                font-size: 0.85rem;
                padding: 0.5rem 0.75rem;
            }
            .main-header h1 {
                font-size: 1.8rem;
            }
            h2.form-title {
                font-size: 1.5rem;
            }
            .submit-btn, .btn-secondary {
                font-size: 1rem;
                padding: 10px 15px;
            }
        }
    </style>
</head>
<body>
    <aside class="sidebar" data-aos="fade-right" data-aos-duration="800">
        <div>
            <div class="sidebar-header">
                <h2><i class="fas fa-cogs"></i> Admin Panel</h2>
            </div>
            <nav class="sidebar-nav">
                <a href="/admin/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="/admin/products"><i class="fas fa-box-open"></i> Manage Products</a>
                <a href="/admin/categories" class="active"><i class="fas fa-th-large"></i> Manage Categories</a>
                <a href="/admin/certificates"><i class="fas fa-certificate"></i> Manage Certificates</a>
                <a href="/admin/users"><i class="fas fa-users"></i> Manage Users</a>
                <a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a>
            </nav>
        </div>
        <div class="sidebar-footer">
            <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
    </aside>

    <main class="main-content">
        <div class="main-header" data-aos="fade-down" data-aos-duration="800" data-aos-delay="200">
            <h1>Create New Category</h1>
            <a href="/admin/categories" class="back-to-web-btn">
                <i class="fas fa-arrow-left"></i> Back to Categories
            </a>
        </div>

        <div class="form-container" data-aos="fade-up" data-aos-delay="300">
            <form action="/admin/categories/create" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Category Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter category name" required>
                </div>
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Cover Image</label>
                    <input type="file" name="coverImage" id="coverImage" class="form-control" accept="image/*" required onchange="previewImage(event, 'coverImagePreview')">
                    <div class="image-preview-container" id="coverImagePreview"></div>
                </div>
                <div class="mb-3">
                    <label>Parent Category (optional)</label>
                    <select name="parentCategory" id="parentCategory" class="form-control" onchange="handleParentChange()">
                        <option value="">-- No Parent (Main Category) --</option>
                        <% mainCategories.forEach(cat => { %>
                            <option value="<%= cat._id %>"><%= cat.name %></option>
                        <% }) %>
                    </select>
                </div>
                 <!-- Hidden field to determine if it's main or sub category  -->
                <input type="hidden" name="isMainCategory" id="isMainCategory" value="true">
                <div class="d-flex justify-content-between">
                    <!-- <a href="/admin/categories" class="btn btn-secondary">Cancel</a> -->
                    <button type="submit" class="btn btn-primary submit-btn">Create Category</button>
                </div>
            </form>
        </div>
    </main>

    <script>
        window.addEventListener('load', function() {
            // No preloader for this page, but keeping AOS init
        });
        AOS.init({
            duration: 1000,
            once: true,
            offset: 50
        });

        function handleParentChange() {
            const parentDropdown = document.getElementById('parentCategory');
            const isMainInput = document.getElementById('isMainCategory');
            isMainInput.value = parentDropdown.value ? 'false' : 'true';
        }

        function previewImage(event, previewContainerId) {
            const previewContainer = document.getElementById(previewContainerId);
            previewContainer.innerHTML = ''; // Clear previous previews

            const files = event.target.files;
            if (files && files.length > 0) {
                const file = files[0]; // Only one file for cover image
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.className = 'image-preview';
                    previewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
</body>
</html>
